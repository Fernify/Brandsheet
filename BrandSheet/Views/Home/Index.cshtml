    <script type="text/javascript">
        $(function () {
            $(".clock").each(function () {
                var hourVal = $(this).data("hour");
                var hour = hourVal > 11 ? hourVal - 12 : hourVal;
                var min = $(this).data("min");
                $(".hour", this).css("transform", "rotate(" + ((hour * 30) + (min * 0.5)) + "deg)");
                $(".minute", this).css("transform", "rotate(" + (min * 6) + "deg)");
            });
        });
    </script>
