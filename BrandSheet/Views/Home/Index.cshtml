<div data-class="section" data-id="fontswitcher">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700|Open+Sans:400,600,700|Roboto:400,500,700|Rubik:400,500,700" rel="stylesheet" defer />
    <script type="text/javascript">
        $("div[data-id='fontswitcher']").on("click", "a", function (e) {
            e.preventDefault();
            $("body").prop("class", $(this).prop("class"));
        });
    </script>
    <style type="text/css">
        .roboto *, a.roboto {
            font-family: Roboto !important;
        }

        .lato *, a.lato {
            font-family: Lato !important;
        }

        .rubik *, a.rubik {
            font-family: Rubik !important;
        }

        .opensans *, a.opensans {
            font-family: 'Open Sans' !important;
        }

    </style>
    <span data-class="sectiontitle">Font Switcher</span>
    <a href="#" data-class="default" class="">Default</a>
    <a href="#" class="roboto">Roboto</a>
    <a href="#" class="lato">Lato</a>
    <a href="#" class="rubik">Rubik</a>
    <a href="#" class="opensans">Open Sans</a>
</div>
@* End Font Switcher  *@

